{
    "name": "tube-summary",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev:settings": "cross-env WATCH=true vite build --config vite.config.settings.ts --watch",
        "dev:bg": "cross-env WATCH=true vite build --config vite.config.bg.ts --watch",
        "dev:main": "cross-env WATCH=true vite build --watch",
        "dev": "npm-run-all --parallel dev:main dev:settings dev:bg",
        "build": "vite build && vite build --config vite.config.settings.ts && vite build --config vite.config.bg.ts"
    },
    "devDependencies": {
        "@preact/preset-vite": "^2.10.2",
        "@tailwindcss/vite": "^4.1.11",
        "@types/chrome": "^0.1.1",
        "@types/firefox-webext-browser": "^120.0.4",
        "@types/node": "^24.0.15",
        "archiver": "^7.0.1",
        "autoprefixer": "^10.4.21",
        "cross-env": "^7.0.3",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "tailwindcss": "^4.1.11",
        "vite": "^7.0.5"
    },
    "dependencies": {
        "marked": "^16.1.1",
        "openai": "^5.10.2",
        "preact": "^10.26.9"
    }
}